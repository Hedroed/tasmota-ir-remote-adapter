{
  "author": "Hedroed",
  "id": "tasmota-ir-adapter",
  "name": "Tasmota IR Remote",
  "short_name": "TasmotaIR",
  "description": "Send IR commands to Tasmota IR devices",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/Hedroed",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "options": {
    "default": {
      "pollInterval": 1000
    },
    "schema": {
      "type": "object",
      "required": [
        "pollInterval"
      ],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The number of milliseconds between two poll intervals"
        },
        "logging": {
          "type": "object",
          "title": "Log settings",
          "properties": {
            "debug": {
              "title": "Enable debug logs",
              "type": "boolean"
            }
          }
        },
        "devices": {
          "type": "array",
          "title": "List of device",
          "items": {
            "type": "object",
            "title": "A device",
            "required": [
              "ip"
            ],
            "properties": {
              "id": {
                "type": "string",
                "title": "The ID of the device (will be generated for you)",
                "readOnly": true
              },
              "ip": {
                "type": "string",
                "title": "The ip address f the Tasmota IR device"
              },
              "codes": {
                "type": "array",
                "title": "List of codes to send then associated action if triggered",
                "items": {
                    "type": "object",
                    "title": "A code",
                    "required": [
                        "code",
                        "name"
                    ],
                    "properties": {
                        "code": {
                            "type": "string",
                            "title": "The code as hexadecimal (ex: 0xF7C837)"
                        },
                        "name": {
                            "type": "string",
                            "title": "Action name"
                        }
                    }
                }
              }
            }
          }
        }
      }
    }
  },
  "version": "0.1.0"
}
